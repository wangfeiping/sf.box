{
  "manifest_version": 3,
  "name": "Muse",
  "version": "1.0.0",
  "description": "Muse - 优雅的 Markdown 编辑器，支持 Git 版本控制",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
